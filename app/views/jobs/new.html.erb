<h1>Input Area </h1>

<% provide(:title, 'Input') %>
<h1> Jobs </h1>

	<div class="row">
		<div class="span3 offset3">

			<%= form_for(@job) do |f| %>

    <div class="field">  
    <%= f.label :Job_category %>
    <%= f.collection_select  :jobcategory, Jobcategory.order("name").all, :name, :name,  :include_blank => false %>
    </div>

	<%= f.label :Job_Description %>
	<%= f.text_field :description %>

	<div class="field">  
    <%= f.label :Institution %>
    <%= f.collection_select  :institution, Institution.order("name").all, :name, :name, :include_blank => false %>
    </div>

	<%= f.label :Alevels %>
	<%= f.text_field :alevel %>

	<%= f.label :GCSEs %>
	<%= f.text_field :gcse %>
	
    <div class="field">  
    <%= f.label :Course_name %>
    <%= f.collection_select  :coursename, Coursename.order("name").all, :name, :name,  :include_blank => false %>
    </div>
           
	<%= f.label :Course_Duration %> 
	<%= f.select :duration, options_for_select(%w[6-Years 5-Years 3-Years 4-Years 2-Years 1-Year Not-Specified ]) %>

	<%= f.label :Fulltime_Parttime %> 
	<%= f.select :ftpt, options_for_select(%w[Fulltime Parttime Not-Specified ]) %>
	 
	<%= f.label :Applicants %>
	<%= f.text_field :applicant %>
	    
    <%= f.label :Places %>
	<%= f.text_field :place %>

	<%= f.label :Work_Experience %>
	<%= f.select :workexp, options_for_select(%w[Yes No Not_Specified ]) %>


    <%= f.submit "ADD record", class: "btn btn-large btn-primary" %>

<% end %>
		</div>
	</div>
